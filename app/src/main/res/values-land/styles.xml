<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_film">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>

    </style>
    <style name="image_view_film">
        <item name="android:layout_width">178dp</item>
        <item name="android:layout_height">178dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="caption_film">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="caption_film_normal" parent="caption_film">
        <item name="android:textColor">@color/colorNoPress</item>
    </style>

    <style name="caption_film_viewed" parent="caption_film_normal">
        <item name="android:textColor">@color/colorPress</item>
    </style>

    <style name="linlay_film">
        <item name ="android:layout_width">190dp</item>
        <item name ="android:layout_height">match_parent</item>

        <item name ="android:orientation">vertical</item>
    </style>

</resources>
